    "version": "0.2.0",
    "configurations": [
        {
            "name": "api",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "src.app.api.asgi:app",
                "--port",
                "9000",
                "--reload"
            ],
            "jinja": true
        },
        {
            "name": "worker",
            "type": "debugpy",
            "request": "launch",
            "module": "rq.cli",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "worker-pool",
                "-n", "2",
                "-u", "redis://localhost:6379",
                "default",
                "low"
            ]
        },

        {
            "name": "tree_hunt",
            "type": "debugpy",
            "request": "launch",
            "module": "src.app.cli.tree_hunt"
        },
        {
            "name": "test",
            "type": "debugpy",
            "request": "launch",
            "module": "tests.test"
        }
    ]
}