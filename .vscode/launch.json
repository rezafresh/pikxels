    "version": "0.2.0",
    "configurations": [
        {
            "name": "api",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "src.app.api.asgi:app",
                "--reload"
            ]
        },
        {
            "name": "worker",
            "type": "debugpy",
            "request": "launch",
            "module": "src.app.cli.start_worker",
            "envFile": "${workspaceFolder}/.env",
        },
        {
            "name": "resource_hunter",
            "type": "debugpy",
            "request": "launch",
            "module": "src.app.cli.start_resource_hunter",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "test",
            "type": "debugpy",
            "request": "launch",
            "module": "tests.test",
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}